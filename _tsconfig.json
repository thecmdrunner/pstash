{
  "compilerOptions": {
    // "module": "commonjs",
    "outDir": "dist",

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    // "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
